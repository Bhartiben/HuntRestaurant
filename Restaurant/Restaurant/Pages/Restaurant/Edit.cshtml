@page "{restaurantid:int?}"
@model EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Editing @Model.restaurant.Name</h2>
<form method="post">
    <input type="hidden" asp-for="restaurant.id"/>
    <div class="form-group">
        <label asp-for="restaurant.Name">
        </label>
        <input asp-for="restaurant.Name" class="form-control" />
        <span asp-validation-for="restaurant.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="restaurant.Location">
        </label>
        <input asp-for="restaurant.Location" class="form-control" />
        <span asp-validation-for="restaurant.Location" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="restaurant.Cuisine">
        </label>
        <select class="form-control" asp-for="restaurant.Cuisine" asp-items="Model.Cuisines"></select>
        <span asp-validation-for="restaurant.Cuisine" class="text-danger"></span>
    </div>
  
    <button type="submit" class="btn btn-primary">Save</button>
</form>

